{% extends "layout.twig" %}

{% block title %}Register{% endblock %}

{% block content %}

{% if errors is not empty %}

<div class="info-box">
	<ul>
		{% for error in errors %}
			{% for err in error %}
				{% if err != 1 %}
					<li>{{err|raw}}</li>
				{% endif %}
			{% endfor %}
		{% endfor %}
	</ul>
</div>

{% endif %}

{{Form_open(path)}}

{{
	Form_group({
		"label": {"for": "username", "text": "Username"},
		"field": {"type": "text", "name": "username", "value": post_obj.username}
	})
}}
{{ 	
	Form_group({
		"label": {"for": "email", "text": "Email"},
		"field": {"type": "text", "name": "email", "value": post_obj.email}
	})
}}
{{ 	
	Form_group({
		"label": {"for": "password", "text": "Password"},
		"field": {"type": "password", "name": "password", "value": post_obj.password}
	})
}}
{{Form_button()}}

{{Form_close()}}
{% endblock %}