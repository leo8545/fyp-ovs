{% extends "layout.twig" %}

{% block title %}Register{% endblock %}

{% block main_classes %}register{% endblock %}

{% block page_content_classes %}boxed{% endblock %}

{% block content %}

{% if errors is not empty %}

<div class="info-box">
	<ul>
		{% for key, error in errors %}
			{% for err in error %}
				{% if err != 1 %}
					<li class='{% if key != 'success' %}error-{{key}}{% else %}success{% endif %}'>{{err|raw}}</li>
				{% endif %}
			{% endfor %}
		{% endfor %}
	</ul>
</div>

{% endif %}

{{Form_open("/register", 'post', {'class': 'form register-form'})}}

{{
	Form_group({
		"label": {"for": "username", "text": "Username"},
		"field": {"type": "text", "name": "username", "value": post_obj.username}
	})
}}
{{ 	
	Form_group({
		"label": {"for": "email", "text": "Email"},
		"field": {"type": "text", "name": "email", "value": post_obj.email}
	})
}}
{{ 	
	Form_group({
		"label": {"for": "password", "text": "Password"},
		"field": {"type": "password", "name": "password", "value": post_obj.password}
	})
}}
{{Form_button("Register", {'class': 'full-width uc'})}}

{{Form_close()}}
{% endblock %}